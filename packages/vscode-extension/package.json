{
    "name": "qingkuai-extension-vscode",
    "version": "1.0.0",
    "author": "lgq",
    "license": "MIT",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:**/*.qk"
    ],
    "main": "../../dist/client.js",
    "description": "qingkuai language support for vscode",
    "contributes": {
        "languages": [
            {
                "id": "qingkuai-emmet",
                "aliases": [
                    "qke"
                ]
            },
            {
                "id": "qingkuai",
                "extensions": [
                    ".qk"
                ],
                "aliases": [
                    "QingKuai",
                    "qk"
                ],
                "icon": {
                    "light": "./imgs/qingkuai.svg",
                    "dark": "./imgs/qingkuai.svg"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qingkuai",
                "scopeName": "source.qk",
                "path": "./syntaxes/qk.tmLanguage.json",
                "embeddedLanguages": {
                    "source.jsdoc": "jsdoc",
                    "source.js": "javascript",
                    "source.ts": "typescript",
                    "source.css": "css",
                    "source.sass": "sass",
                    "source.stylus": "stylus",
                    "source.css.scss": "scss",
                    "source.css.less": "less",
                    "source.css.postcss": "css",
                    "text.html.markdown": "markdown"
                },
                "unbalancedBracketScopes": [
                    "text",
                    "text-content.qk",
                    "entity.name.tag",
                    "punctuation.definition.tag",
                    "storage.type.function.arrow",
                    "keyword.operator.relational",
                    "keyword.operator.bitwise.shift"
                ]
            },
            {
                "language": "qingkuai-emmet",
                "scopeName": "source.qke",
                "path": "./syntaxes/qke.tmLanguage.json",
                "embeddedLanguages": {
                    "source.qk": "qingkuai"
                }
            },
            {
                "scopeName": "source.css.postcss",
                "path": "./syntaxes/postcss.tmLanguage.json"
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "typescript-plugin-qingkuai",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": ".qingkuairc",
                "url": "./qingkuairc-schema.json"
            },
            {
                "fileMatch": ".prettierrc",
                "url": "./qingkuai-prettierrc-schema.json"
            }
        ],
        "configurationDefaults": {
            "files.associations": {
                ".qingkuairc": "json"
            }
        },
        "configuration": {
            "title": "Qingkuai",
            "properties": {
                "qingkuai.typescriptDiagnosticsExplain": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allow to add explain to ambiguous typescript diagnostic message for qingkuai file."
                },
                "qingkuai.insertSpaceAroundInterpolation": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to insert a space around interpolation block."
                },
                "qingkuai.componentTagFormatPreference": {
                    "type": "string",
                    "enum": [
                        "camel",
                        "kebab"
                    ],
                    "default": "camel",
                    "description": "Your preferred component tag format for formatting and completion suggestions."
                },
                "qingkuai.componentAttributeFormatPreference": {
                    "type": "string",
                    "enum": [
                        "camel",
                        "kebab"
                    ],
                    "default": "camel",
                    "description": "Your preferred component attribute format for formatting and completion suggestions."
                },
                "qingkuai.htmlHoverTip": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "tag",
                            "entity",
                            "attribute"
                        ]
                    },
                    "default": [
                        "tag",
                        "entity",
                        "attribute"
                    ],
                    "uniqueItems": true,
                    "description": "Whether to enable hover tip for HTML tags, attributes and entity characters."
                }
            }
        }
    },
    "scripts": {
        "build:grammers": "npm run build:grammer && npm run build:emmet-grammer",
        "build:grammer": "cd ./syntaxes/src && npx js-yaml ./qk.tmLanguage.yaml > ../qk.tmLanguage.json && npx prettier --write ../qk.tmLanguage.json",
        "build:emmet-grammer": "cd ./syntaxes/src && npx js-yaml ./qk-emmet.tmLanguage.yaml > ../qke.tmLanguage.json && npx prettier --write ../qke.tmLanguage.json"
    },
    "devDependencies": {
        "js-yaml": "^4.1.0"
    },
    "dependencies": {
        "typescript-plugin-qingkuai": "workspace:^",
        "qingkuai": "file:/users/lianggaoqiang/desktop/QingKuai/qingkuai"
    }
}
