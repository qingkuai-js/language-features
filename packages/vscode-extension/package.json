{
    "name": "qingkuai-vscode-extension",
    "version": "1.0.0",
    "author": "lgq",
    "license": "MIT",
    "publisher": "qingkuai-tools",
    "main": "./dist/client.js",
    "description": "qingkuai language support for vscode",
    "displayName": "Qingkuai",
    "icon": "imgs/logo.png",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:**/*.qk"
    ],
    "contributes": {
        "commands": [
            {
                "command": "qingkuai.restartLanguageServer",
                "title": "Restart Language Server",
                "category": "Qingkuai"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "qingkuai.restartLanguageServer",
                    "when": "resourceFilename =~ /\\.(?:qk|qingkuairc)/"
                }
            ]
        },
        "languages": [
            {
                "id": "qingkuai-emmet",
                "aliases": [
                    "qke"
                ]
            },
            {
                "id": "qingkuai",
                "extensions": [
                    ".qk"
                ],
                "aliases": [
                    "QingKuai",
                    "qk"
                ],
                "icon": {
                    "light": "./imgs/qingkuai.png",
                    "dark": "./imgs/qingkuai.png"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qingkuai",
                "scopeName": "source.qk",
                "path": "./syntaxes/qk.tmLanguage.json",
                "embeddedLanguages": {
                    "source.jsdoc": "jsdoc",
                    "source.js": "javascript",
                    "source.ts": "typescript",
                    "source.css": "css",
                    "source.sass": "sass",
                    "source.stylus": "stylus",
                    "source.css.scss": "scss",
                    "source.css.less": "less",
                    "source.css.postcss": "css",
                    "text.html.markdown": "markdown"
                },
                "unbalancedBracketScopes": [
                    "text",
                    "text-content.qk",
                    "entity.name.tag",
                    "punctuation.definition.tag",
                    "storage.type.function.arrow",
                    "keyword.operator.relational",
                    "keyword.operator.bitwise.shift"
                ]
            },
            {
                "language": "qingkuai-emmet",
                "scopeName": "source.qke",
                "path": "./syntaxes/qke.tmLanguage.json",
                "embeddedLanguages": {
                    "source.qk": "qingkuai"
                }
            },
            {
                "scopeName": "source.css.postcss",
                "path": "./syntaxes/postcss.tmLanguage.json"
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "typescript-plugin-qingkuai",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": ".qingkuairc",
                "url": "./qingkuairc-schema.json"
            },
            {
                "fileMatch": ".prettierrc",
                "url": "./qingkuai-prettierrc-schema.json"
            }
        ],
        "configurationDefaults": {
            "files.associations": {
                ".qingkuairc": "json",
                ".prettierrc": "json"
            }
        },
        "configuration": {
            "title": "Qingkuai",
            "properties": {
                "qingkuai.typescriptDiagnosticsExplain": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allow to add explain to ambiguous typescript diagnostic message for qingkuai file."
                },
                "qingkuai.insertSpaceAroundInterpolation": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to insert a space around interpolation block."
                },
                "qingkuai.componentTagFormatPreference": {
                    "type": "string",
                    "enum": [
                        "camel",
                        "kebab"
                    ],
                    "default": "camel",
                    "description": "Your preferred component tag format for formatting and completion suggestions."
                },
                "qingkuai.componentAttributeFormatPreference": {
                    "type": "string",
                    "enum": [
                        "camel",
                        "kebab"
                    ],
                    "default": "camel",
                    "description": "Your preferred component attribute format for formatting and completion suggestions."
                },
                "qingkuai.htmlHoverTip": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "tag",
                            "entity",
                            "attribute"
                        ]
                    },
                    "default": [
                        "tag",
                        "entity",
                        "attribute"
                    ],
                    "uniqueItems": true,
                    "description": "Whether to enable hover tip for HTML tags, attributes and entity characters."
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qingkuai-js/language-features.git",
        "directory": "packages/vscode-extension"
    },
    "scripts": {
        "build:grammers": "npm run build:grammer && npm run build:emmet-grammer",
        "build:grammer": "cd ./syntaxes/src && npx js-yaml ./qk.tmLanguage.yaml > ../qk.tmLanguage.json && npx prettier --write ../qk.tmLanguage.json",
        "build:emmet-grammer": "cd ./syntaxes/src && npx js-yaml ./qk-emmet.tmLanguage.yaml > ../qke.tmLanguage.json && npx prettier --write ../qke.tmLanguage.json",
        "vsce:ls": "npm run vsce:pre && cd ../../ && npm run build && cd ./packages/vscode-extension && vsce ls && vsce:post",
        "vsce:package": "npm run vsce:pre && cd ../../ && npm run build && cd ./packages/vscode-extension && vsce package && npm run vsce:post",
        "vsce:publish": "npm run vsce:pre && cd ../../ && npm run build && cd ./packages/vscode-extension && vsce publish && npm run vsce:post",
        "vsce:pre": "rimraf node_modules ../typescript-plugin/node_modules && npm install && cd ../typescript-plugin && npm install",
        "vsce:post": "rimraf node_modules ../typescript-plugin/node_modules package-lock.json ../typescript-plugin/package-lock.json && pnpm install"
    },
    "devDependencies": {
        "js-yaml": "^4.1.0"
    },
    "dependencies": {
        "prettier": "^3.5.2",
        "prettier-plugin-qingkuai": "^1.0.12",
        "qingkuai": "^1.0.14",
        "typescript-plugin-qingkuai": "file:../typescript-plugin"
    }
}
