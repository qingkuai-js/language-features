{
    "comments": {
        "blockComment": ["<!--", "-->"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        {
            "open": "'",
            "close": "'",
            "notIn": ["string", "comment"]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": ["string"]
        },
        {
            "open": "`",
            "close": "`",
            "notIn": ["string", "comment"]
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": ["string"]
        }
    ],
    "autoCloseBefore": ";:.,=}])><`\n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "onEnterRules": [
        {
            "beforeText": "<(?!/|br|img|input|meta|link|hr|base|area|col|keygen|menuitem|embed|param|source|track|wbr)[a-z][a-zA-Z_.:\\d\\-]+[^>]*(?<!/)>",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "<(?!/|br|img|input|meta|link|hr|base|area|col|keygen|menuitem|embed|param|source|track|wbr)[a-z][a-zA-Z_.:\\d\\-]+[^>]*(?<!/)>",
            "afterText": "^</[a-z][a-zA-Z_.:\\d\\-]*",
            "action": {
                "indent": "indentOutdent"
            }
        }
    ],
    "indentationRules": {
        "increaseIndentPattern": "<(?!\\?|(?:br|img|input|meta|link|hr|base|area|col|keygen|menuitem|embed|param|source|track|wbr)\\b|[^>]*\\/>)([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*<\\/\\1>)|<!--(?!.*-->)|\\{[^}\"']*$",
        "decreaseIndentPattern": "^\\s*(<\\/[-_\\.A-Za-z0-9]+\\b[^>]*>|-->|\\})"
    }
}
