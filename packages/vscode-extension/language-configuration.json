{
    "comments": {
        "blockComment": ["<!--", "-->"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        {
            "open": "'",
            "close": "'",
            "notIn": ["string", "comment"]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": ["string"]
        },
        {
            "open": "`",
            "close": "`",
            "notIn": ["string", "comment"]
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": ["string"]
        }
    ],
    "autoCloseBefore": ";:.,=}])><`\n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"]
    ],
    "onEnterRules": [
        {
            "beforeText": "<(?!/)(?!br|img|input|meta|link|hr|base|area|col|embed|param|source|track|wbr)[a-z][a-zA-Z_.:\\d\\-]*[^>]*(?<!/)>",
            "afterText": "^\\s+",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "<(?!/)(?!br|img|input|meta|link|hr|base|area|col|embed|param|source|track|wbr)[a-z][a-zA-Z_.:\\d\\-]*[^>]*(?<!/)>",
            "afterText": "^</[a-z][a-zA-Z_.:\\d\\-]*",
            "action": {
                "indent": "indentOutdent"
            }
        }
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
