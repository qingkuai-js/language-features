{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "autoAttachChildProcesses": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"],
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"]
        }
    ]
}
